    "sdk": "org.freedesktop.Sdk",
    "command": "arduino-ide",
    "separate-locales": false,
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--share=network",
        "--device=all",
        "--filesystem=home",
