                    "sha256": "ae74fb96c20a0277a1d615f1e4d73c8414f5a98db8b799a7931d1582f3390c28",
                    "x-checker-data": {
                        "type": "pypi",
                        "name": "click",
                        "packagetype": "bdist_wheel"
                    }
                }
            ]
        },
        {
            "name": "python3-ecdsa",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"ecdsa\""
            ],
            "sources": [
                {
                    "type": "file",
