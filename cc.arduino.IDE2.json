                },
                {
                    "type": "archive",
                    "dest": "arduino-ide",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/arduino/arduino-ide/releases/download/2.1.1/arduino-ide_2.1.1_Linux_64bit.zip",
                    "sha256": "211d27de6024eb4fa418c8b03c0c586e09a81235e886dae064b5cf51a5ea2d0e",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/arduino/arduino-ide/releases/latest",
                        "version-query": ".tag_name | sub(\"^jq-\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"arduino-ide_\" + $version + \"_Linux_64bit.zip\") | .browser_download_url"
                    }
                }
            ]
        }
    ]
